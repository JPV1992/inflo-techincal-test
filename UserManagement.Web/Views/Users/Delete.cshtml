@model UserManagement.Web.Models.Users.UserListItemViewModel

@{
    ViewData["Title"] = "Delete User";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this user?</h3>
<div>
    <h4>User</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(item => item.Id)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(item => item.Id)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(item => item.Forename)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(item => item.Forename)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(item => item.Surname)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(item => item.Surname)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(item => item.DateOfBirth)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(item => item.DateOfBirth)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(item => item.Email)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(item => item.Email)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(item => item.IsActive)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(item => item.IsActive)
        </dd>
    </dl>

    <form asp-controller="Users" asp-action="DeleteConfirmed">
        <input type="hidden" asp-for="Id" />
        <input type="button" data-url="@Url.Action("DeleteConfirmed", "Users", new { id = Model.Id })" value="Delete" class="btn btn-danger delete-log"  />
        <a asp-action="List" class="btn btn-primary">Back to List</a>
    </form>
</div>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script>
    $(document).ready(function() {
        $('.delete-log').click(function() {
            let url = $(this).data('url');

            let userConfirmation = confirm('Are you sure you want to delete this user?');

            if (userConfirmation) {
                $.ajax({
                    url: url,
                    type: 'DELETE',
                    success: function(result) {
                        window.location.href = '/users';
                    }
                });
            }
        });
    });
</script>
